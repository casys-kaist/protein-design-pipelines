/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running the test structure prediction pipeline
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines test-specific parameters for structure prediction workflow testing.
    Use as follows:
        nextflow run main.nf -profile test_structure_prediction,k8s --structure_prediction_mode protenix
        nextflow run main.nf -profile test_structure_prediction,docker --structure_prediction_mode esmfold
----------------------------------------------------------------------------------------
*/

params {

    // Pipeline mode
    pipeline = 'test_structure_prediction'

    // Default modes for the test
    structure_prediction_mode = 'protenix' // Can be overridden (e.g., esmfold, alphafold3, colabfold)

    // Container configuration
    container_prefix = 'jwhwang'

    // Input files for testing
    input = "$projectDir/samplesheet/samplesheet_structure_prediction.csv"

    // Skip unnecessary steps
    skip_multiqc = false
    docking_mode = null
    inverse_folding_mode = null
    structure_design_mode = null
    variant_generation_mode = null


    // Disable validation for this test profile
    
} 
