/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running test docking pipeline
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines test-specific parameters and input files for docking workflow testing.
    Use as follows:
        nextflow run main.nf -profile test_docking,docker
        nextflow run main.nf -profile test_docking,k8s
----------------------------------------------------------------------------------------
*/

params {

    // Pipeline mode
    pipeline = 'test_docking'

    // Test-specific docking parameters
    docking_mode = 'vina_cpu'  // Use CPU version for testing (faster, less resource intensive)
    use_gpu      = false

    // Input files for testing
    input = "$projectDir/samplesheet/samplesheet_receptor_ligand.csv"

    // Skip resource-intensive steps not needed for basic docking testing
    skip_multiqc = false
    
    // Disable validation for test_docking (uses different input format)
    

    // Test data paths (these would need to be populated with actual test files)
    // These should point to small, representative test files
    test_receptor_pdb    = null  // Path to test receptor PDB file
    test_ligand_sdf      = null  // Path to test ligand SDF file  
    test_ligand_pdbqt    = null  // Path to test ligand PDBQT file

    // Reduce computation for testing
    vina_exhaustiveness  = 2     // Default is usually 8, reduce for testing
    vina_num_modes      = 3      // Default is usually 9, reduce for testing
}
