/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running test structure design pipeline
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines test-specific parameters and input files for structure design workflow testing.
    Use as follows:
        nextflow run main.nf -profile test_structure_design,docker
        nextflow run main.nf -profile test_structure_design,k8s
----------------------------------------------------------------------------------------
*/

params {

    // Pipeline mode
    pipeline = 'test_structure_design'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '12.GB'
    max_time   = '6.h'

    // Test-specific design parameters
    structure_design_mode = 'rfdiffusion'
    use_gpu      = true // RFdiffusion requires GPU

    // Input files for testing
    input = "$projectDir/samplesheet/samplesheet_structure_design.csv"

    // Disable validation for this test profile
}

