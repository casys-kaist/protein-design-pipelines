/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running test MSA pipeline
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines test-specific parameters and input files for MSA workflow testing.
    Use as follows:
        nextflow run main.nf -profile test_msa,docker
        nextflow run main.nf -profile test_msa,k8s
----------------------------------------------------------------------------------------
*/

params {

    // Pipeline mode
    pipeline = 'test_msa'

    // Increase resources for MMseqs2 to work properly
    max_cpus   = 4
    max_memory = '50.GB'  // Increased from 6.GB to allow MMseqs2 to run
    max_time   = '12.h'   // Increased from 6.h for longer searches

    // Test-specific MSA parameters
    msa_mode = 'mmseqs2'
    use_gpu  = false  // Default to CPU for testing (faster, less resource intensive)

    // MMseqs2 parameters for testing (same as runtime)
    mmseqs2_db1 = 'uniref30_2302_db'
    mmseqs2_db3 = 'colabfold_envdb_202108_db'

    // Container configuration
    container_prefix = 'jwhwang'

    // Input files for testing
    input = "$projectDir/samplesheet/samplesheet_msa.csv"

    // Skip resource-intensive steps not needed for basic MSA testing
    skip_multiqc = false
    
    // Disable validation for test_msa (uses different input format)
    

    // Test data paths (use actual production paths)
    // No override needed - uses standard pipeline settings
} 
